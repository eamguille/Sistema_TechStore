@model Techstore_WebApp.Models.DB.VentasEmpresa

@{
    ViewData["Title"] = "Crear Venta";
}

<h2 class="text-center mb-4">Registrar Nueva Venta</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="IdCliente" class="form-label">Cliente</label>
                <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdUsuario" class="form-label">Usuario</label>
                <select asp-for="IdUsuario" class="form-select" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaVenta" class="form-label">Fecha Venta</label>
                <input asp-for="FechaVenta" class="form-control" type="date" />
                <span asp-validation-for="FechaVenta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TotalVenta" class="form-label">Total Venta</label>
                <input asp-for="TotalVenta" class="form-control" type="number" min="0" />
                <span asp-validation-for="TotalVenta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MetodoPago" class="form-label">Método de Pago</label>
                <select asp-for="MetodoPago" class="form-select">
                    <option value="Tarjeta">Tarjeta</option>
                    <option value="Efectivo">Efectivo</option>
                </select>
                <span asp-validation-for="MetodoPago" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EstadoVenta" class="form-label">Estado Venta</label>
                <select asp-for="EstadoVenta" class="form-select">
                    <option value="Completada">Completada</option>
                    <option value="Pendiente">Pendiente</option>
                </select>
                <span asp-validation-for="EstadoVenta" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Registrar Venta</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>
