@model Techstore_WebApp.Models.DB.Producto

@{
    ViewData["Title"] = "Detalles de Producto";
}

<h1 class="text-center mb-4 text-primary">Detalles del Producto</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="mb-0">@Model.NombreProducto</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-5 col-md-4 text-end fw-bold">Descripción:</dt>
                <dd class="col-7 col-md-8">@Model.DescripcionProducto</dd>

                <dt class="col-5 col-md-4 text-end fw-bold">Precio de Compra:</dt>
                <dd class="col-7 col-md-8">$@Model.PrecioCompra</dd>

                <dt class="col-5 col-md-4 text-end fw-bold">Precio de Venta:</dt>
                <dd class="col-7 col-md-8">$@Model.PrecioVenta</dd>

                <dt class="col-5 col-md-4 text-end fw-bold">Cantidad en Stock:</dt>
                <dd class="col-7 col-md-8">@Model.CantidadStock</dd>

                <dt class="col-5 col-md-4 text-end fw-bold">Estado:</dt>
                <dd class="col-7 col-md-8">@Model.Estado</dd>

                <dt class="col-5 col-md-4 text-end fw-bold">Categoría:</dt>
                <dd class="col-7 col-md-8">@Model.IdCategoriaProductoNavigation?.Categoria</dd>

                <dt class="col-5 col-md-4 text-end fw-bold">Modelo:</dt>
                <dd class="col-7 col-md-8">@Model.IdModeloNavigation?.Modelo1</dd>

                <dt class="col-5 col-md-4 text-end fw-bold">Tipo de Producto:</dt>
                <dd class="col-7 col-md-8">@Model.IdTipoProductoNavigation?.TipoProducto</dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdProducto" class="btn btn-primary btn-sm me-2">
                <i class="bi bi-pencil-square"></i> Editar Producto
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Regresar a Productos
            </a>
        </div>
    </div>
</div>
