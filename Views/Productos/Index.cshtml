@model IEnumerable<Techstore_WebApp.Models.DB.Producto>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mb-5">PRODUCTOS</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo producto</a>
</p>
<table class="table table-striped">
    <thead class="table-header">
        <tr class="text-center align-middle">
            <th>
                @* @Html.DisplayNameFor(model => model.NombreProducto) *@
                Nombre Producto
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.DescripcionProducto) *@
                Descripcion
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.PrecioCompra) *@
                Precio Compra
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.PrecioVenta) *@
                Precio Venta
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.CantidadStock) *@
                Cantidad Stock
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Estado) *@
                Estado
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.IdCategoriaProductoNavigation) *@
                Categoria
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.IdModeloNavigation) *@
                Modelo
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.IdTipoProductoNavigation) *@
                Tipo Producto
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center align-middle">
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionProducto)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.PrecioCompra)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.PrecioVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCategoriaProductoNavigation.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdModeloNavigation.Modelo1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoProductoNavigation.TipoProducto)
                </td>
                <td>
                    <div class="d-flex flex-nowrap">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdProducto" title="Editar"><i
                                class="bi bi-pencil-square text-white"></i></a>
                        <a asp-action="Details" class="btn btn-warning mx-2" asp-route-id="@item.IdProducto"
                            title="Detalles"><i class="bi bi-archive text-white"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProducto" title="Eliminar"><i
                                class="bi bi-trash-fill text-white"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
