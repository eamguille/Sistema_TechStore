@model IEnumerable<Techstore_WebApp.Models.DB.Producto>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mb-5 text-center">Productos</h2>

<div class="d-flex justify-content-between flex-wrap mb-3">
    <div>
        <a asp-action="Create" class="btn btn-success">Crear nuevo producto</a>
    </div>
    <div class="w-100 w-md-50 mt-2 mt-md-0">
        <input type="text" id="buscador" class="form-control" placeholder="Busca un producto...">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-light">
            <tr class="text-center align-middle">
                <th>Nombre Producto</th>
                <th class="d-none d-md-table-cell">Descripción</th>
                <th class="d-none d-lg-table-cell">Precio Compra</th>
                <th class="d-none d-lg-table-cell">Precio Venta</th>
                <th class="d-none d-lg-table-cell">Cantidad Stock</th>
                <th class="d-none d-lg-table-cell">Estado</th>
                <th class="d-none d-xl-table-cell">Categoría</th>
                <th class="d-none d-xl-table-cell">Modelo</th>
                <th class="d-none d-xl-table-cell">Tipo Producto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="cuerpoTabla">
            @foreach (var item in Model)
            {
                <tr class="text-center align-middle">
                    <td>@Html.DisplayFor(modelItem => item.NombreProducto)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.DescripcionProducto)</td>
                    <td class="d-none d-lg-table-cell">$@Html.DisplayFor(modelItem => item.PrecioCompra)</td>
                    <td class="d-none d-lg-table-cell">$@Html.DisplayFor(modelItem => item.PrecioVenta)</td>
                    <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.CantidadStock)</td>
                    <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td class="d-none d-xl-table-cell">@Html.DisplayFor(modelItem => item.IdCategoriaProductoNavigation.Categoria)</td>
                    <td class="d-none d-xl-table-cell">@Html.DisplayFor(modelItem => item.IdModeloNavigation.Modelo1)</td>
                    <td class="d-none d-xl-table-cell">@Html.DisplayFor(modelItem => item.IdTipoProductoNavigation.TipoProducto)</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" class="btn btn-primary btn-sm me-2" asp-route-id="@item.IdProducto" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" class="btn btn-warning btn-sm me-2" asp-route-id="@item.IdProducto" title="Detalles">
                                <i class="bi bi-archive"></i>
                            </a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.IdProducto" title="Eliminar">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                <tr class="collapse d-md-none" id="details-@item.IdProducto">
                    <td colspan="2">
                        <div class="bg-light p-3">
                            <p><strong>Descripción:</strong> @Html.DisplayFor(modelItem => item.DescripcionProducto)</p>
                            <p><strong>Precio Compra:</strong> $@Html.DisplayFor(modelItem => item.PrecioCompra)</p>
                            <p><strong>Precio Venta:</strong> $@Html.DisplayFor(modelItem => item.PrecioVenta)</p>
                            <p><strong>Cantidad Stock:</strong> @Html.DisplayFor(modelItem => item.CantidadStock)</p>
                            <p><strong>Estado:</strong> @Html.DisplayFor(modelItem => item.Estado)</p>
                            <p><strong>Categoría:</strong> @Html.DisplayFor(modelItem => item.IdCategoriaProductoNavigation.Categoria)</p>
                            <p><strong>Modelo:</strong> @Html.DisplayFor(modelItem => item.IdModeloNavigation.Modelo1)</p>
                            <p><strong>Tipo Producto:</strong> @Html.DisplayFor(modelItem => item.IdTipoProductoNavigation.TipoProducto)</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.querySelectorAll('td:first-child').forEach(td => {
        td.addEventListener('click', () => {
            const rowId = `#details-${td.parentElement.querySelector('td').textContent.trim()}`;
            const currentOpen = document.querySelector('.collapse.show');

                if (currentOpen && currentOpen.id !== rowId.slice(1)) {
                currentOpen.classList.remove('show');
                }

                const targetRow = document.querySelector(rowId);
            targetRow.classList.toggle('show');
            });
        });
</script>
