@model IEnumerable<Techstore_WebApp.Models.DB.Producto>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mb-5">Productos</h2>

<div class="d-flex justify-content-between">
    <div>
        <p>
            <a asp-action="Create" class="btn btn-success">Crear nuevo producto</a>
        </p>
    </div>
    <div class="w-50">
        <input type="text" id="buscador" class="form-control" placeholder="Busca un producto...">
    </div>
</div>

<table class="table table-striped">
    <thead class="table-header">
        <tr class="text-center align-middle">
            <th>
                @* @Html.DisplayNameFor(model => model.NombreProducto) *@
                Nombre Producto
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.DescripcionProducto) *@
                Descripcion
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.PrecioCompra) *@
                Precio Compra
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.PrecioVenta) *@
                Precio Venta
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.CantidadStock) *@
                Cantidad Stock
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Estado) *@
                Estado
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.IdCategoriaProductoNavigation) *@
                Categoria
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.IdModeloNavigation) *@
                Modelo
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.IdTipoProductoNavigation) *@
                Tipo Producto
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody id="cuerpoTabla">
        @foreach (var item in Model)
        {
            <tr class="text-center align-middle">
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionProducto)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.PrecioCompra)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.PrecioVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCategoriaProductoNavigation.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdModeloNavigation.Modelo1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoProductoNavigation.TipoProducto)
                </td>
                <td>
                    <div class="d-flex flex-nowrap">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdProducto" title="Editar"><i
                                class="bi bi-pencil-square text-white"></i></a>
                        <a asp-action="Details" class="btn btn-warning mx-2" asp-route-id="@item.IdProducto"
                            title="Detalles"><i class="bi bi-archive text-white"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProducto" title="Eliminar"><i
                                class="bi bi-trash-fill text-white"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById('buscador').addEventListener('keyup', async (e) => {
        const texto = e.target.value.trim();

        try {
            // Realizar la búsqueda, incluso si el texto está vacío
            const response = await fetch(`/Productos/Buscador?texto=${texto}`);
            if (!response.ok) {
                throw new Error('Error al buscar el producto');
            }

            const productos = await response.json();
            actualizarTabla(productos);
        } catch (error) {
            console.error(error);
        }
    });

    function actualizarTabla(productos) {
        const tabla = document.getElementById('cuerpoTabla');
        tabla.innerHTML = '';

        if (productos.length === 0) {
            tabla.innerHTML = '<tr><td colspan="9" class="text-center">No se encontraron productos.</td></tr>';
            return;
        }

        productos.forEach(producto => {
            const fila = document.createElement('tr');
            fila.classList.add('text-center', 'align-middle');

            fila.innerHTML = `
                <td>${producto.nombreProducto}</td>
                <td>${producto.descripcionProducto}</td>
                <td>$${producto.precioCompra}</td>
                <td>$${producto.precioVenta}</td>
                <td>${producto.cantidadStock}</td>
                <td>${producto.estado}</td>
                <td>${producto.categoria}</td>
                <td>${producto.modelo1}</td>
                <td>${producto.tipoProducto}</td>
                <td>
                    <div class="d-flex flex-nowrap">
                        <a href="/Productos/Edit/${producto.idProducto}" class="btn btn-primary" title="Editar"><i class="bi bi-pencil-square text-white"></i></a>
                        <a href="/Productos/Details/${producto.idProducto}" class="btn btn-warning mx-2" title="Detalles"><i class="bi bi-archive text-white"></i></a>
                        <a href="/Productos/Delete/${producto.idProducto}" class="btn btn-danger" title="Eliminar"><i class="bi bi-trash-fill text-white"></i></a>
                    </div>
                </td>
            `;
            tabla.appendChild(fila);
        });
    }
</script>