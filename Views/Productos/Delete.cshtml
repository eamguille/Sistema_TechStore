@model Techstore_WebApp.Models.DB.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2 class="text-center mb-4 text-danger">Eliminar Producto</h2>

<div class="alert alert-warning text-center">
    <p>¿Estás seguro de que deseas eliminar el producto <strong>@Model.NombreProducto</strong>?</p>
</div>

<div class="row justify-content-center">
    <div class="col-auto">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdProducto" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
    </div>
    <div class="col-auto">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</div>
