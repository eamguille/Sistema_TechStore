@model Techstore_WebApp.Models.DB.Proveedore

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<h2 class="text-center mb-4 text-danger">Eliminar Proveedor</h2>

<div class="alert alert-warning text-center">
    <p>¿Estás seguro de que deseas eliminar al proveedor <strong>@Model.NombreProveedor</strong>?</p>
</div>

<div class="d-flex justify-content-center gap-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProveedor" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
