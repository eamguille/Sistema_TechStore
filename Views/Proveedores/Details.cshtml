@model Techstore_WebApp.Models.DB.Proveedore

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<h2 class="text-center mb-4">Detalles del Proveedor</h2>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h5 class="card-title">@Model.NombreProveedor</h5>
        <p><strong>DUI:</strong> @Model.Dui</p>
        <p><strong>Teléfono:</strong> @Model.Telefono</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Dirección:</strong> @Model.Direccion</p>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Edit" asp-route-id="@Model.IdProveedor" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
