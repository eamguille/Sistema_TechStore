@model Techstore_WebApp.Models.DB.ComprasEmpresa

@{
    ViewData["Title"] = "Detalles de la Compra";
}

<h2 class="mb-4 text-center">Detalles de la Compra</h2>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h5 class="card-title">Compra Realizada</h5>
        <p><strong>Fecha:</strong> @Model.FechaCompra</p>
        <p><strong>Total:</strong> $@Model.TotalCompra</p>
        <p><strong>Estado:</strong> @Model.EstadoCompra</p>
        <p><strong>Proveedor:</strong> @Model.IdProveedorNavigation.NombreProveedor</p>
        <p><strong>Usuario:</strong> @Model.IdUsuarioNavigation.NombreUsuario</p>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Edit" asp-route-id="@Model.IdCompra" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
