@model Techstore_WebApp.Models.DB.ComprasEmpresa

@{
    ViewData["Title"] = "Eliminar Compra";
}

<h2 class="mb-4 text-danger text-center">Eliminar Compra</h2>

<div class="alert alert-warning text-center">
    <p>¿Estás seguro que deseas eliminar la compra realizada el <strong>@Model.FechaCompra</strong>?</p>
</div>

<div class="d-flex justify-content-center gap-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCompra" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
