@model Techstore_WebApp.Models.DB.ComprasEmpresa

@{
    ViewData["Title"] = "Eliminar Compra";
}

<h2 class="text-center mb-4 text-danger">Eliminar Compra</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-center text-danger">¿Estás seguro que deseas eliminar esta compra?</h5>
                <p class="text-center">
                    Compra realizada el <strong>@Model.FechaCompra</strong>
                </p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 text-end fw-bold">Total Compra:</dt>
                    <dd class="col-sm-8">$@Model.TotalCompra</dd>

                    <dt class="col-sm-4 text-end fw-bold">Estado:</dt>
                    <dd class="col-sm-8">@Model.EstadoCompra</dd>

                    <dt class="col-sm-4 text-end fw-bold">Proveedor:</dt>
                    <dd class="col-sm-8">@Model.IdProveedorNavigation.NombreProveedor</dd>

                    <dt class="col-sm-4 text-end fw-bold">Usuario:</dt>
                    <dd class="col-sm-8">@Model.IdUsuarioNavigation.NombreUsuario</dd>
                </dl>
                <div class="d-flex justify-content-between">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="IdCompra" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
