@model Techstore_WebApp.Models.DB.CategoriasProducto

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h2 class="mb-4 text-danger text-center">Eliminar Categoría</h2>

<div class="alert alert-warning text-center">
    <p>¿Estás seguro que deseas eliminar la categoría <strong>@Model.Categoria</strong>?</p>
</div>

<div class="d-flex justify-content-center gap-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCategoriaProducto" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
