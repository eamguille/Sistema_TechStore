@model Techstore_WebApp.Models.DB.CategoriasProducto

@{
    ViewData["Title"] = "Detalles de Categoría";
}

<h1 class="text-center mb-4 text-primary">Detalles de Categoría</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="mb-0">Categoría</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-end fw-bold">Nombre:</dt>
                <dd class="col-sm-8">@Model.Categoria</dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdCategoriaProducto" class="btn btn-primary btn-sm me-2">
                <i class="bi bi-pencil-square"></i> Editar Categoría
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Regresar a Categorías
            </a>
        </div>
    </div>
</div>
