@model Techstore_WebApp.Models.DB.CategoriasProducto

@{
    ViewData["Title"] = "Detalles de la Categoría";
}

<h2 class="mb-4 text-center">Detalles de la Categoría</h2>

<div class="card mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <h5 class="card-title text-center">@Model.Categoria</h5>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Edit" asp-route-id="@Model.IdCategoriaProducto" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
