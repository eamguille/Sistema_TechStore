@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-4">
    <h4 class="text-center mb-4">@ViewData["usuario"]</h4>
    <hr>

    <div class="row">
        <!-- Gráfico de ventas por mes -->
        <div class="col-md-6 col-sm-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Total en ventas por mes</h3>
                </div>
                <div class="card-body">
                    <canvas asp-action="ObtenerVentasPorMes" asp-controller="Charts" id="ventasPorMesChart"></canvas>
                    <div class="text-center">
                        <h4 id="mensaje"></h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico de productos más vendidos -->
        <div class="col-md-6 col-sm-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>5 Productos Más Vendidos</h3>
                </div>
                <div class="card-body">
                    <canvas asp-action="Obtener5ProductosMasVendidos" asp-controller="Charts" id="productosMasVendidos"></canvas>
                    <div class="text-center">
                        <h4 id="mensaje"></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    canvas {
        max-height: 400px;
        width: 100%;
    }

    .card-header {
        font-weight: bold;
    }

    .card-body {
        text-align: center;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    let mensaje = document.getElementById("mensaje");

    // Cargar gráfico de ventas por mes
    async function cargarVentasPorMes() {
        try {
            const response = await fetch('/Charts/ObtenerVentasPorMes');
            if (!response.ok) {
                throw new Error('Error al obtener los datos de ventas.');
            }
            const data = await response.json();

            const etiquetas = data.map(item => `${item.mes}/${item.anio}`);
            const totales = data.map(item => item.totalVentas);

            const ctx = document.getElementById('ventasPorMesChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: etiquetas,
                    datasets: [{
                        label: 'Total Ventas',
                        data: totales,
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40',
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
                        ],
                        borderColor: '#ffffff',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    let label = context.label || '';
                                    let value = context.raw || 0;
                                    return `${label}: $${value.toFixed(2)}`;
                                }
                            }
                        }
                    }
                }
            });
        } catch (error) {
            console.error(error);
            mensaje.textContent = 'Error al cargar el gráfico.';
        }
    }

    // Cargar gráfico de productos más vendidos
    async function cargarProductosMasVendidos() {
        try {
            const response = await fetch('/Charts/Obtener5ProductosMasVendidos');
            if (!response.ok) {
                throw new Error('Error al obtener los datos de los productos.');
            }
            const data = await response.json();

            const bubbleData = data.map(item => {
                return {
                    x: item.precioPromedio,
                    y: item.cantidadTotal,
                    r: (item.cantidadTotal / 10) * 3  // Tamaño del bubble
                };
            });

            const etiquetas = data.map(item => item.nombreProducto);

            const ctx = document.getElementById('productosMasVendidos').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: etiquetas,
                    datasets: [{
                        label: 'Top 5 Productos Más Vendidos',
                        data: bubbleData,
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Precio Promedio ($)'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Cantidad Vendida'
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    const producto = context.chart.data.labels[context.dataIndex];
                                    const xValue = context.raw.x;
                                    const yValue = context.raw.y;
                                    return `${producto}: Precio Promedio $${xValue}, Cantidad Vendida ${yValue}`;
                                }
                            }
                        }
                    }
                }
            });
        } catch (error) {
            console.error(error);
            mensaje.textContent = 'No se logró cargar la gráfica.';
        }
    }

    cargarVentasPorMes();
    cargarProductosMasVendidos();
</script>
