@model Techstore_WebApp.Models.DB.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1 class="mb-4">Detalles del Cliente</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.NombreCliente</h5>
        <p class="card-text"><strong>DUI:</strong> @Model.Dui</p>
        <p class="card-text"><strong>Teléfono:</strong> @Model.Telefono</p>
        <p class="card-text"><strong>Correo Electrónico:</strong> @Model.Email</p>
        <p class="card-text"><strong>Dirección:</strong> @Model.Direccion</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdCliente" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
