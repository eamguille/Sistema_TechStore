@model Techstore_WebApp.Models.DB.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2 class="text-center mb-4 text-danger">Eliminar Cliente</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-center text-danger">¿Estás seguro que deseas eliminar este cliente?</h5>
                <p class="text-center">
                    Cliente: <strong>@Model.NombreCliente</strong>
                </p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 text-end fw-bold">DUI:</dt>
                    <dd class="col-sm-8">@Model.Dui</dd>

                    <dt class="col-sm-4 text-end fw-bold">Teléfono:</dt>
                    <dd class="col-sm-8">@Model.Telefono</dd>

                    <dt class="col-sm-4 text-end fw-bold">Correo Electrónico:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 text-end fw-bold">Dirección:</dt>
                    <dd class="col-sm-8">@Model.Direccion</dd>
                </dl>
                <div class="d-flex justify-content-between">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="IdCliente" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
