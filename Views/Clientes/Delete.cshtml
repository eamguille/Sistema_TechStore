@model Techstore_WebApp.Models.DB.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1 class="text-center mb-4">Eliminar Cliente</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-center text-danger">¿Está seguro de que desea eliminar este cliente?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 text-end fw-bold">Nombre del Cliente:</dt>
                <dd class="col-sm-8">@Model.NombreCliente</dd>

                <dt class="col-sm-4 text-end fw-bold">DUI:</dt>
                <dd class="col-sm-8">@Model.Dui</dd>

                <dt class="col-sm-4 text-end fw-bold">Teléfono:</dt>
                <dd class="col-sm-8">@Model.Telefono</dd>

                <dt class="col-sm-4 text-end fw-bold">Correo Electrónico:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4 text-end fw-bold">Dirección:</dt>
                <dd class="col-sm-8">@Model.Direccion</dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-center">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="IdCliente" />
                <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Eliminar</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
        </div>
    </div>
</div>
